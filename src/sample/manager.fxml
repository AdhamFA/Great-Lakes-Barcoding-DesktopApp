<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ManagerController">
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Tickets Total:" />
            <Region layoutX="79.0" layoutY="10.0" HBox.hgrow="ALWAYS" />
            <Label layoutX="10.0" layoutY="10.0" text="Customers Being Serviced:" />
         </children>
         <BorderPane.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu fx:id="menu_ST" mnemonicParsing="false" text="Service Tickets">
                  <items>
                    <MenuItem fx:id="mst_New" mnemonicParsing="false" text="New" />
                        <MenuItem fx:id="mst_Inprogress" mnemonicParsing="false" text="Inprogress" />
                        <MenuItem fx:id="mst_Finished" mnemonicParsing="false" text="Finished" />
                  </items>
                </Menu>
                <Menu fx:id="menu_Reports" mnemonicParsing="false" text="Reports">
                  <items>
                    <MenuItem fx:id="rprt_Tickets" mnemonicParsing="false" text="Tickets" />
                        <MenuItem fx:id="rprt_Invoices" mnemonicParsing="false" text="Invoices" />
                        <MenuItem fx:id="rprt_Employees" mnemonicParsing="false" text="Employees" />
                        <MenuItem fx:id="rprt_Customers" mnemonicParsing="false" text="Customers" />
                        <MenuItem fx:id="rprt_Contracts" mnemonicParsing="false" text="Contracts" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="rcrd_Mileage" mnemonicParsing="false" text="Record Mileage" />
                        <MenuItem fx:id="rcrd_Hours" mnemonicParsing="false" text="Record Hours" />
                  </items>
                </Menu>
                <Menu fx:id="menu_Help" mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem fx:id="help_About" mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox spacing="3.0">
               <children>
                  <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Edit Current Ticket">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Button>
                  <Button layoutX="62.0" layoutY="10.0" mnemonicParsing="false" text="Remove Ticket" />
                  <Region HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </padding></Region>
                  <Button fx:id="btnLogout" layoutX="114.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleButtonAction" text="Logout" />
               </children>
               <VBox.margin>
                  <Insets bottom="2.0" left="8.0" right="8.0" top="2.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <FlowPane alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblWelcome" text="Welcome back, " textFill="#141668">
               <font>
                  <Font name="AR JULIAN" size="24.0" />
               </font>
            </Label>
            <ImageView fitHeight="276.0" fitWidth="331.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="warning.png" />
               </image>
            </ImageView>
         </children>
      </FlowPane>
   </center>
   <right>
      <TableView BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="75.0" text="Tickets in-progress" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </right>
   <left>
      <TableView BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="75.0" text="New Service Tickets" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </left>
</BorderPane>
