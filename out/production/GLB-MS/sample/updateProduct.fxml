<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.UpdateProductController">
   <right>
      <VBox spacing="12.0" BorderPane.alignment="CENTER">
         <children>
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="update" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Update">
               <padding>
                  <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
               </padding></Button>
            <Button fx:id="cancel" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#cancelScene" text="Cancel">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
               </padding></Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <center>
      <HBox spacing="2.0">
         <children>
            <VBox spacing="12.0" BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <HBox spacing="6.0">
                     <children>
                        <Label text="Product Number:" />
                        <Region HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="cmbNUM" />
                        <TextField fx:id="txtNAME" editable="false" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="12.0" />
                     </VBox.margin>
                  </HBox>
                  <Label text="Inventory: ">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Separator />
                  <HBox>
                     <children>
                        <Label text="Minimum In Stock" />
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="txtMIN" />
                     </children>
                  </HBox>
                  <HBox layoutX="10.0" layoutY="130.0">
                     <children>
                        <Label text="Currently In Stock" />
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="txtCUR" />
                     </children>
                  </HBox>
                  <HBox layoutX="10.0" layoutY="230.0">
                     <children>
                        <Label text="On Order" />
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="txtON" />
                     </children>
                  </HBox>
               </children>
               <BorderPane.margin>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </BorderPane.margin>
               <HBox.margin>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </HBox.margin>
            </VBox>
            <Separator orientation="VERTICAL" />
         </children>
      </HBox>
   </center>
</BorderPane>
