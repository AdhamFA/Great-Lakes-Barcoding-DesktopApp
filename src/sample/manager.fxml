<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ManagerController">
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="ticketsCounter" text="Tickets Total:" />
            <Region layoutX="79.0" layoutY="10.0" HBox.hgrow="ALWAYS" />
         </children>
         <BorderPane.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu fx:id="menu_ST" mnemonicParsing="false" text="Service Tickets">
                  <items>
                    <MenuItem fx:id="mst_New" mnemonicParsing="false" text="New Service Tickets" />
                        <MenuItem fx:id="mst_Inprogress" mnemonicParsing="false" text="In-progress Tickets" />
                        <MenuItem fx:id="mst_Finished" mnemonicParsing="false" text="Finished Tickets" />
                  </items>
                </Menu>
                <Menu fx:id="menu_Reports" mnemonicParsing="false" text="Reports">
                  <items>
                    <MenuItem fx:id="rprt_Tickets" mnemonicParsing="false" onAction="#rprtOnAction" text="Tickets" />
                        <MenuItem fx:id="rprt_Invoices" mnemonicParsing="false" onAction="#rprtOnAction" text="Invoices" />
                        <MenuItem fx:id="rprt_Employees" mnemonicParsing="false" onAction="#rprtOnAction" text="Employees" />
                        <MenuItem fx:id="rprt_Customers" mnemonicParsing="false" onAction="#rprtOnAction" text="Customers" />
                        <MenuItem fx:id="rprt_Products" mnemonicParsing="false" onAction="#rprtOnAction" text="Products" />
                  </items>
                </Menu>
                <Menu fx:id="menu_Help" mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem fx:id="help_About" mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox spacing="3.0">
               <children>
                  <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Edit Current Ticket">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Button>
                  <Region HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </padding></Region>
                  <Button fx:id="btnLogout" layoutX="114.0" layoutY="10.0" mnemonicParsing="false" onAction="#logoutButtonAction" text="Logout" />
               </children>
               <VBox.margin>
                  <Insets bottom="2.0" left="8.0" right="8.0" top="2.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <FlowPane alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblWelcome" text="Welcome back, " textFill="#141668">
               <font>
                  <Font name="AR JULIAN" size="24.0" />
               </font>
            </Label>
            <ImageView fitHeight="276.0" fitWidth="331.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="glblogo.png" />
               </image>
            </ImageView>
         </children>
      </FlowPane>
   </center>
   <right>
      <TableView fx:id="wipTickets" BorderPane.alignment="CENTER">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </right>
   <left>
      <TableView fx:id="newTickets" BorderPane.alignment="CENTER">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </left>
</BorderPane>
